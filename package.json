    "eslint-plugin-react": "^7.12.4",
    "husky": "^1.3.1",
    "lerna": "^3.13.1",
    "lint-staged": "^8.1.5",
    "postcss-cli": "^6.1.2",
    "postcss-import": "^12.0.1",
    "postcss-nested": "^4.1.2",
    "postcss-simple-vars": "^5.0.2",
    "prettier": "1.16.4"
  },
  "dependencies": {
    "@babel/plugin-proposal-decorators": "^7.3.0",
    "@babel/plugin-proposal-export-namespace-from": "^7.2.0",
